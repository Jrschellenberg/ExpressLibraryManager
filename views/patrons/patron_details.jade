extends ../layout
block content
  h1 Patron: Andrew Chalkley
  form(action="/patrons/update/"+patron.id, method="post")
    p
      label(for='first_name') First Name
      input#first_name(type='text', value='Andrew', name="first_name")
    p
      label(for='last_name') Last Name
      input#last_name(type='text', value='Chalkley', name="last_name")
    p
      label(for='address')  Address
      input#address(type='text', value='1234 NE 20st St', name="address")
    p
      label(for='email') Email
      input#email(type='text', value='andrew.chalkley@teamtreehouse.com', name="email")
    p
      label(for='library_id') Library ID
      input#library_id(type='text', value='MCL1001', name="library_id")
    p
      label(for='zip_code') Zip Code
      input#zip_code(type='text', value='90210', name="zip_code")
    p
      input(type='submit', value='Update')
  h2 Loan History
  table
    thead
      tr
        th Book
        th Patron 
        th Loaned on
        th Return by 
        th Returned on
        th Action
    tbody
      for loan in loans
        tr
          td
            a(href='book_detail.html') Harry Potter and the Goblet of Fire
          td
            a(href='patron_detail.html') Andrew Chalkley
          td 2015-12-11
          td 2015-12-18
          td
          td
            a.button(href='return_book.html') Return Book