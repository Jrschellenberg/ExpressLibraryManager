extends ../layout
block content
  h1 Books
  p
    a.button(href='/books/new') Create New Book
  p
    | Filters 
    a(href='/books/find/all') All
    | |
    a(href='/books/find/overdue') Overdue
    | |
    a(href='/books/find/checked_out') Checked Out
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year Released
    tbody
      for book in books
        tr
          td
            a(href='/books/details/#{book.id}') #{book.title}
          td #{book.author}
          td #{book.genre}
          td #{book.first_published}
